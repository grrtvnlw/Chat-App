<%- include('partials/page-start') %>

<div class="container vh-100 py-3">

  <div class="card h-100">
    <div class="card-header d-flex align-items-center">
      <h3>Hi Let's Chat</h3>
      <button onclick="location.href = '/'" class="btn btn-secondary ml-3 p-1">Main Room</button>
      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle ml-3 p-1" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Invite
        </button>
        <div class="dropdown-menu" id="invite" aria-labelledby="dropdownMenuButton">
          <% invites.forEach(person => { %>
              <a class="dropdown-item" href="#"><%= person %> </a>
          <% }) %>
        </div>
      </div>
    </div>
    <div class="d-flex h-100">
      <div class="m-3">
        <p class="ml-3">Chat</p>
      </div>
      <ul id="messages" class="list-group w-80 flex-grow-1 overflow-auto" style="list-style-type: none;">
        <!-- Chat messages go here -->
      </ul>
      <div class="m-3">
        <p class="ml-3">Online</p>
      </div>
      <ul id="online" class="list-group w-20 flex-grow-1 overflow-auto" style="list-style-type: none;">
        <!-- Online users go here -->
      </ul>
    </div>
    <div class="card-footer">
      <form class="chat-form d-flex">
        <input class="form-control chat-input w-100" id="chat-message" />
        <button type="submit" class="btn btn-primary">
          Send
        </button>
      </form>
    </div>
  </div>
</div>

<%- include('partials/page-end') %>